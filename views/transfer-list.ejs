<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
    <link rel="stylesheet" href="/css/tables.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (trans.length > 0) { %>
            
            <table class="table sticky" width="100%">
                <thead>  
                    <tr class="gray">
                        <th>Date</th>
                        <th>Facility</th>
                        <th>Requester</th>
                        <th>IMMS #</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>UOM</th>
                        <th>Filled By</th>
                        <th>Tracking Number</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>  
                <% for (let transfers of trans) { %>
                    <div class="scrollit"></div>
                    <tbody> 
                        <tr>
                            <td><%= transfers.date %></td>
                            <td><%= transfers.facility %></td>
                            <td><%= transfers.requester %></td>
                            <td><%= transfers.imms %></td>
                            <td><%= transfers.description %></td>
                            <td><%= transfers.quantity %></td>
                            <td><%= transfers.uom %></td>
                            <td><%= transfers.filledBy %></td>
                            <td><%= transfers.trackingNum %></td>
                            <td><a href="/admin/edit-transfer/<%= transfers.id %>?edit=true" class="edit-btn">Edit</a></td>
                            <form action="/admin/delete-transfer" method="POST">
                                <input type="hidden" value="<%= transfers.id %>" name="transferId">
                                <td><button class="edit-btn">Delete</button></td>
                            </form>
                            
                        </tr>
                    </tbody>
                    </div>      
                <% } %>
            </table>
            
        <% } else { %>
            <h1>No Transfers Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>