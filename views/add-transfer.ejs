<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-transfer" method="POST">
            <div class="form-control">
                <label for="facility">Requesting Facility</label>
                <input type="text" name="facility" id="facility">
            </div>
            <div class="form-control">
                <label for="imms">Imms #</label>
                <input type="text" name="imms" id="imms">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <input type="text" name="description" id="description">
            </div>
            <div class="form-control">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" id="quantity">
            </div>

            <button class="btn" type="submit">Add Transfer</button>
        </form>
    </main>

<%- include('includes/end.ejs') %>